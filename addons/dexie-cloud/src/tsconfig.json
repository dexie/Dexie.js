{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2020",
    "declaration": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "downlevelIteration": true
  },
  "include": ["**/*.ts"],
  "references": [{ "path": "../../../libs/dexie-cloud-common" }]
}
